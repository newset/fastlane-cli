{
  "name": "fastlane-cli",
  "version": "1.2.0",
  "description": "#### 初始化项目",
  "main": "lib/index.js",
  "scripts": {
    "dev": "tsc -w",
    "build": "rm -rf lib && tsc",
    "test": "ava -v",
    "prepublishOnly": "rm -rf lib && npm run build",
    "release": "standard-version",
    "prettify": "prettier --write"
  },
  "bin": {
    "fl": "./lib/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.aihaisi.com:qiexr/public-group/fastlane-cli.git"
  },
  "file": [
    "lib"
  ],
  "author": "luojie",
  "license": "ISC",
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/node": "^14.0.12",
    "@types/yargs": "^15.0.5",
    "ava": "^3.12.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "standard-version": "^9.0.0",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "args": "^5.0.1",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "inquirer": "^7.3.3",
    "lodash": "^4.17.15",
    "miniprogram-ci": "^1.0.83",
    "ora": "^4.0.4",
    "yargs": "^15.4.1"
  },
  "ava": {
    "files": [
      "test/**"
    ],
    "typescript": {
      "extensions": [
        "ts",
        "tsx"
      ],
      "rewritePaths": {
        "src/": "lib/"
      }
    }
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "prettier": {
    "tabWidth": 2
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
